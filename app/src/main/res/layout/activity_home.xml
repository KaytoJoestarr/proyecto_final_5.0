<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/ly1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user1"
            android:paddingRight="40dp"/>

        <TextView
            android:id="@+id/tv_nombre_user"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ly1"
            android:layoutDirection="rtl"
            android:paddingRight="50dp"
            android:text="User"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/hora"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_redondeado"
        android:textColor="@color/white"
        android:text="11:10 AM"/>


    <TextView
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/ly1"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:text="INICIO"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inicio"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/mis_tareas_button"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_tareas"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/boton_redondeado_2" />

        <ImageButton
            android:id="@+id/btn_mihogar"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/icon_hogar"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/boton_redondeado_3" />


        <ImageButton
            android:id="@+id/habitacion_button"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/icon_habitacion"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/boton_redondeado_2" />/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ly2"
        android:gravity="center">

        <ImageButton
            android:id="@+id/notas_button"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondeado_2"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_notas" />

        <ImageButton
            android:id="@+id/calendario_button"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boton_redondeado_3"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_calendario" />


        <ImageButton
            android:id="@+id/puntuacion_button"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/icon_puntuacion"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/boton_redondeado_2" />/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly4"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ly3"
        android:gravity="center">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/ly3"
            android:background="@drawable/boton_redondeado"
            android:gravity="center"
            android:text="Cerrar sesiÃ³n" />

    </LinearLayout>

</RelativeLayout>